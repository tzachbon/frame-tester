{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist/js",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@scss/*": ["assets/scss/*"]
    }
  }
}
